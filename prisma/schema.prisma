generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gost {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  ime         String?
  prezime     String?
  rezervacije Rezervacija[]
}

model Sobe {
  id          Int           @id @default(autoincrement())
  naziv       String
  opis        String
  cijena      Float
  slike       String[]
  rezervacije Rezervacija[]
}

model Rezervacija {
  id          Int       @id @default(autoincrement())
  sobe        Sobe  @relation(fields: [sobeId], references: [id])
  sobeId      Int
  gost        Gost?  @relation(fields: [gostId], references: [id])
  gostId      Int?
  pocetak     DateTime
  kraj        DateTime
  osoba       Int
  status      String    @default("na ƒçekanju")
  createdAt   DateTime  @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role          Role     @default(USER)
  createdAt DateTime @default(now())

}
enum Role {
  ADMIN
  USER
}

model test{
  id        Int      @id @default(autoincrement())
  ime String
  broj Int?

}